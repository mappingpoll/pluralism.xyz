{
  "name": "survey2021",
  "homepage": "grenier-2021.herokuapp.com",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "start": "NODE_ENV=prod node server.js",
    "css:build": "postcss src/style.css -o static/style.css",
    "css:watch": "postcss src/style.css -o static/style.css --watch --verbose",
    "serve:dev": "NODE_ENV=dev DATABASE_URL=http://localhost:5432 nodemon server.js",
    "dev": "npm-run-all --parallel css:watch serve:dev",
    "lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "autoprefixer": "^9.8.7",
    "dotenv": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.1",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "i18n": "^0.13.3",
    "pg": "^8.7.1",
    "postcss-media-minmax": "^5.0.0",
    "pug": "^3.0.2",
    "sqlite3": "^5.0.2"
  },
  "browserslist": [
    "defaults"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
