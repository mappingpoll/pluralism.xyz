extends base

block content
    div(class="submit")
        h1 !{title}
        div !{textContent}
        div(class="centered-content" style="flex-direction: column;")
            div(class="email-div")
                span [
                input(id='email' type='email' name='email' placeholder='abc123@email.com')
                span ]
            div(style="position: relative;")
                button(type="button") #{__("submitLabel")}
                div(class="spinner hidden")

block scripts
    script(defer type="module" src="/submit.js")
