doctype html
- var style = colors ? `background-color: ${colors[0]};` : ""
head
    title Survey 2022
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width,initial-scale=1.0, maximum-scale=1.0,user-scalable=no')
    link(rel='stylesheet' href='style.css')
    block head-scripts
body(style=style)
    block header
        include includes/header
    block content
    block footer
    if colors
        script.
          const colors = "#{colors}".split(',');
          let i = 0;
          setTimeout(setBodyBackgroundColor, 100);
          setInterval(setBodyBackgroundColor, 10000);

          function setBodyBackgroundColor() {
            const color = colors[++i % colors.length];
            document.body.style.setProperty('background-color', color);
          }
    block scripts
