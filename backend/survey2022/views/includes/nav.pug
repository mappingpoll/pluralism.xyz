div(class="footer")
    if restart
        a(href="/") #{__("restart")}
    if reset
        a(href="#" class="previous" onclick="window.localStorage.clear(); document.cookie.split(';').forEach(c => { const p = c.indexOf('='); document.cookie = (p > -1 ? c.subStr(0, p) : c) + '=;expires=Thu, 01 Jan 1970 00:00:00 GMT' }); window.location.href = '/reset'; return false")   #{__("reset")}
    if previous
        a(href=previous class="previous") #{__('previousLabel')}
    if canComment
        a(href='#' class="comment" id="comment-btn") #{__('commentLabel')}
    if next
        a(href=next class="next") #{__('nextLabel')}
