{
  "name": "survey2022",
  "homepage": "jdlc2022.pluralism.xyz",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "css:build": "postcss src/style.css -o src/static/style.css",
    "css:watch": "postcss src/style.css -o src/static/style.css --watch --verbose",
    "serve:dev": "NODE_ENV=development nodemon src/server.js",
    "serve:debug": "NODE_ENV=development node --trace-sync-io src/server.js",
    "dev": "npm-run-all --parallel css:watch serve:dev",
    "lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@types/compression": "^1",
    "autoprefixer": "^9.8.7",
    "dotenv": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.1",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "i18n": "^0.13.3",
    "pg": "^8.7.1",
    "postcss-media-minmax": "^5.0.0",
    "pug": "^3.0.2"
  },
  "browserslist": [
    "defaults"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
